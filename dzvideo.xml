<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_dzvideo</name>
    <creationDate>2013-08-20</creationDate>
    <copyright>Copyright (C) 2013. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>DZ Team</author>
    <authorEmail>dev@dezign.vn</authorEmail>
    <authorUrl>dezign.vn</authorUrl>
    <version>1.0.0</version>
    <description>Video management component by DZ Team</description>
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>dzvideo.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <languages folder="site">
        
			<language tag="en-GB">language/en-GB.com_dzvideo.ini</language>
			<language tag="vi-VN">language/vi-VN.com_dzvideo.ini</language>
    </languages>
    <administration>
        <menu img="components/com_dzvideo/assets/images/s_com_dzvideo.png" >COM_DZVIDEO</menu>
        <submenu>
            
			<menu link="option=com_dzvideo&amp;view=videos" view="videos" img="components/com_dzvideo/assets/images/s_videos.png" alt="Dzvideo/Videos">COM_DZVIDEO_TITLE_VIDEOS</menu>

			<menu link="option=com_categories&amp;extension=com_dzvideo.videos.catid" view="categories" img="components/com_dzvideo/assets/images/s_videos.png" alt="Dzvideo/Categories">COM_DZVIDEO_VIDEOS_CATID</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>dzvideo.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator">
            
			<language tag="en-GB">language/en-GB.com_dzvideo.ini</language>
			<language tag="en-GB">language/en-GB.com_dzvideo.sys.ini</language>
			<language tag="vi-VN">language/vi-VN.com_dzvideo.ini</language>
			<language tag="vi-VN">language/vi-VN.com_dzvideo.sys.ini</language>
        </languages>
    </administration>
</extension>
